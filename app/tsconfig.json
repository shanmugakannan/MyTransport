{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "out": "../transportbuild.js"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "boot.ts",
        "components/route-detail.component.ts",
        "components/search-result.component.ts",
        "components/search-route.component.ts",
        "directives/selected-style.ts",
        "services/search-route-service.ts",
        "types/search-result.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
